<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_screen"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ResultScreenActivity">

    <ImageView
        android:id="@+id/current_point"
        android:layout_width="@dimen/image_300"
        android:layout_height="@dimen/image_400"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_bottom"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/distance_away"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="@dimen/margin_bottom"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/total_distance"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="@dimen/margin_bottom"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <Button
        android:id="@+id/return_enter_results"
        android:layout_width="@dimen/buttonWidth2"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_gravity="center"
        android:onClick="returnEntry"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:shadowColor="@color/shadow"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/back_to_map"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"/>
</LinearLayout>