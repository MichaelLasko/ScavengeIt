<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScavengerListActivity"
    tools:showIn="@layout/activity_scavenger_list">

    <LinearLayout
        android:id="@+id/scavenger_list"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dim_30"
        android:layout_marginVertical="@dimen/dim_30">

        <Button
            android:id="@+id/back_list"
            android:layout_gravity="center"
            android:text="@string/back_to_map"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text"
            android:layout_marginTop="@dimen/dim_30"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:background="@drawable/button_shape"
            android:shadowColor="@color/shadow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="backToMap"
            />

        </LinearLayout>

</androidx.core.widget.NestedScrollView>